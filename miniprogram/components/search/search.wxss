.container {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  position: relative;
}

.bar {
  flex: 1;
  height: 68rpx;
  font-size: 28rpx;
  border-radius: 50px;
  background-color: #f5f5f5;
  padding-left: 60rpx;
}

.in-bar {
  columns: #999999;
}

.search {
  background-color: #d43c43;
  color: #ffffff;
  margin-left: 20rpx;
  font-size: 24rpx;
}

.search-icon {
  position: absolute;
  top: 50%;
  transform: translate(16rpx, -50%);
  color: #9f9f9f;
}
